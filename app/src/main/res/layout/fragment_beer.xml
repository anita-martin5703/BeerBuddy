<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".model.fragments.BeerFragment">

    <ListView
            android:id="@+id/list_of_beers"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/select_beer_name"/>

    <ScrollView
            android:id="@+id/select_beer_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/list_of_beers"
            android:visibility="visible"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/select_brewery_carrier">
    </ScrollView>

    <ScrollView
            android:id="@+id/select_brewery_carrier"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            tools:layout_editor_absoluteY="501dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/select_beer_name"
            app:layout_constraintBottom_toTopOf="@+id/select_beer_type"
    >
    </ScrollView>

    <ScrollView
            android:id="@+id/select_beer_type"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/select_brewery_carrier"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/select_beer_style">
    </ScrollView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            tools:layout_editor_absoluteY="607dp"
            android:id="@+id/select_beer_style"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/select_beer_type"
            app:layout_constraintBottom_toTopOf="@+id/button_update_beer_list"
    >
    </ScrollView>
    <Button
            android:id="@+id/button_update_beer_list"
            android:text="Update Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/select_beer_style"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>